{
    "compilerOptions": {
        "lib": ["es2015", "es2016", "es2017"],
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "target": "es6",
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noFallthroughCasesInSwitch": true,
        "typeRoots": ["./node_modules/@types/"]
    },
    "include": [
        "src/**/*",
        "test/**/*"
    ],
    "files": [
      "src/index.ts"
    ]
}
